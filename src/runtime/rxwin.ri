/*
 * Set the context's foreground color by color cell.
 */
int isetfg(w,fg)
wbp w;
int fg;
   {
   int i, r, g, b;
   STDLOCALS(w);

   if (fg >= 0) {
      b = fg & 255;
      fg >>= 8;
      g = fg & 255;
      fg >>= 8;
      r = fg & 255;
      return setfgrgb(w, r * 257, g * 257, b * 257);
      }
   for (i = 2; i < wd->numColors; i++)
      if (wd->colrptrs[i]->type == CMUTABLE && wd->colrptrs[i]->c == -fg - 1)
	 break;
   if (i == wd->numColors) return Failed;
   wc->fg = wd->colrptrs[i];
   return resetfg(w);
   }

